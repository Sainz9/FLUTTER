import 'package:flutter/material.dart';

class HomePage extends StatefulWidget {
  const HomePage({super.key});

  @override
  State<HomePage> createState() => _HomePageState();
}

class _HomePageState extends State<HomePage> {
  int navigationBarIndex = 1;

  void onTapNavigationItem(int idx) {
    setState(() {
      navigationBarIndex = idx;
    });
  }

  List<String> texts = ["Мэдээ", "Нүүр", "Пропайл"];

  @override
  Widget build(BuildContext context) {
    return DefaultTabController(
      length: 3,
      child: Scaffold(
        appBar: AppBar(
          backgroundColor: Colors.blue, 
          title: Center( 
            child: Text(
              texts[navigationBarIndex],
              style: TextStyle(color: Color.fromARGB(255, 255, 255, 255)),
          
            ),
          ),
          bottom: TabBar(
            indicatorColor: Color.fromARGB(255, 208, 255, 0),
            
            tabs: List.generate(
              texts.length,
              
              (i) => Tab(text: texts[i]),
            ),
          ),
        ),
        body: TabBarView(
          children: List.generate(
            texts.length,
            (i) => Center(child: Text(texts[i], style: TextStyle(fontSize: 24))),
          ),
        ),
        bottomNavigationBar: BottomNavigationBar(
          currentIndex: navigationBarIndex,
          onTap: onTapNavigationItem,
          backgroundColor: Colors.blue, 
          selectedItemColor: Colors.white, 
          unselectedItemColor: Colors.grey,
          items: [
          
            BottomNavigationBarItem(
              icon: Icon(Icons.newspaper),
              label: "Мэдээ",
             
            ),
            BottomNavigationBarItem(
              icon: Icon(Icons.home),
              label: "Нүүр",
            ),
            BottomNavigationBarItem(
              icon: Icon(Icons.person),
              label: "Пропайл",
            ),
          ],
        ),
      ),
    );
  }
}
